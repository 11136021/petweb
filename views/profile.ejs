<!-- 查看個人檔案-->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet伴，陪伴</title> <!-- 改 （主題名）-->

    <!-- Bootstrap core CSS 內文的css連結 (外匡？)-->
    <link rel="stylesheet" href="/stylesheets/assets/bootstrap.min.css">
    <!-- Fonts -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Righteous" rel="stylesheet">
    <!-- Custom styles for this template內文的css連結(外匡？) -->
    <link rel="stylesheet" href="/stylesheets/assets/mediumish.css">
    <link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/css/templatemo-style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <!-- 下拉選單外掛 -->
    <style>
        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .dropdown-menu {
            margin-top: 0;
            background-color: #DBC89B;
        }

        .dropdown-item {
            background-color: #DBC89B;
            color: #FFFEFB;
        }

        .collapse {
            color: #A88E4F;
        }
    </style>
    <script>
        $(document).ready(function () {
            $(".dropdown").hover(function () {
                var dropdownMenu = $(this).children(".dropdown-menu");
                if (dropdownMenu.is(":visible")) {
                    dropdownMenu.parent().toggleClass("open");
                }
            });
        });     
    </script>

    <!-- navbar-->
    <!-- 引用navbar -->
    <%- include('navbar/navbar.ejs') %>

        <!-- navbar end -->
</head>


<!-- Begin Top Author Page
================================================== -->
<% for (let i=0; i < model.length; i++) { %>
    <div class="container-fluid tm-container-content tm-mt-60">
        <div class="container">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8 col-md-offset-2">
                    <div class="mainheading">
                        <div class="row post-top-meta authorpage">
                            <div class="col-md-10 col-xs-12">
                                <h1>
                                    <%= model[i].name %>
                                </h1>
                                <span class="author-description">
                                    <%= model[i].introduction %>
                                </span>
                            </div>
                            <div class="col-md-2 col-xs-12">
                                <img class="author-thumb" src=/img/demopic/user2.jpeg alt="David">
                            </div>
                            <!-- textarea元素保留，用於顯示自介，不可編輯 -->
                            <textarea readonly type="textarea" id="autoresizing" style="width: 80%;" name="content"
                                placeholder="輸入自介"><%= model[i].introduction %></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <!-- 編輯個人檔案按鍵移到右邊 -->
            <div class="row">
                <div class="col-md-10 col-xs-12 text-right">
                    <!-- 使用 data-toggle 和 data-target 屬性啟用 Modal -->
                    <a href="#" data-toggle="modal" data-target="#editProfileModal" title="Edit Profile">編輯個人檔案</a>
                </div>
            </div>
        </div>


        <!-- End Top Author Meta
================================================== -->

        <!-- Begin Author Posts
================================================== -->
        <div class="graybg authorpage">
            <div class="container">
                <div class="listrecent listrelated">

                    <!-- begin post -->
                    <div class="authorpostbox">
                        <div class="card">
                            <div class="card-block">
                                <h2 class="card-title">我的個人檔案</a></h2>
                                <br>
                                <h4 class="card-text">暱稱：<%= model[i].nickname %>
                                </h4>
                                <br>
                                <h4 class="card-text">email：<%= model[i].email %>
                                </h4>
                                <br>
                                <h4 class="card-text">飼養的寵物：<%= model[i].petname %>
                                </h4>
                                <br>
                                <h4 class="card-text">生日：<%= model[i].birthday %>
                                </h4>

                                <%}%>
                                    <h4 class="card-text"></h4>
                                    <div class="metafooter">
                                        <div class="wrapfooter">
                                            <span class="meta-footer-thumb">
                                                <a href=""><img class="author-thumb" src=/img/demopic/user2.jpeg
                                                        alt="Sal"></a>
                                            </span>
                                        </div>
                                    </div>
                            </div>
                        </div>

                    </div>
                    <!-- end post -->
                    
                </div>
            </div>
        </div>
        <%- include('navbar/footer.ejs') %>

            <!-- End Author Posts
================================================== -->
    </div>
    <!-- Modal 的 HTML 代碼 -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog" aria-labelledby="editProfileModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel">編輯個人檔案</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="" method="post" enctype="multipart/form-data"> <!-- 放入按下確認後會到的頁面 -->

                    <div class="modal-body">
                        <!-- 大頭貼 -->
                        <div class="form-group">
                            <label for="profilePicture">大頭貼：</label>
                            <input type="file" class="form-control" id="profilePicture" name="photo" value="<%= model[0].photo %>">
                            <!-- 如果需要預覽，可以在這裡加上預覽的元素 -->
                        </div>

                        <!-- 暱稱 -->
                        <div class="form-group">
                            <label for="nickname">暱稱：</label>
                            <input type="text" class="form-control" id="nickname" name="nickname" value="<%= model[0].nickname %>">
                        </div>

                        <!-- 自介 -->
                        <div class="form-group">
                            <label for="introduction">自介：</label>
                            <textarea class="form-control" id="introduction" name="introduction" value="<%= model[0].introduction %>"></textarea>
                        </div>

                        <!-- 飼養的寵物 -->
                        <div class="form-group">
                            <label for="pets">飼養的寵物：</label>
                            <input type="text" class="form-control" id="petname" name="petname" value="<%= model[0].petname %>">
                        </div>

                        <!-- email -->
                        <div class="form-group">
                            <label for="email">email：</label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= model[0].email %>">
                        </div>

                        <!-- 生日 -->
                        <div class="form-group">
                            <label for="birthday">生日：</label>
                            <input type="date" class="form-control" id="birthday" name="birthday">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-secondary">送出</button>
                        <!-- 如果需要的話，你可以在這裡放上提交表單的按鈕 -->
                    </div>
                </form>

            </div>
        </div>
    </div>
    <!-- /.container -->

    <!-- Bootstrap core JavaScript
     ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="assets/js/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"
        integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb"
        crossorigin="anonymous"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/ie10-viewport-bug-workaround.js"></script>
    <script src="https://code.jquery.com/jquery-2.2.4.js"></script>
    <script src="/javascript/js/plugins.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <script>
        $(window).on("load", function () {
            $('body').addClass('loaded');
        });
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    </div>
    </body>
    </div>

</html>