 <!-- 下拉選單外掛 -->
 <style>
     .dropdown:hover .dropdown-menu{
         display: block;
     }
     .dropdown-menu{
         margin-top: 0;
         background-color: #DBC89B;
     }
     .dropdown-item{
         background-color: #DBC89B;
         color: #FFFEFB;
     }
     .collapse {
         color: #A88E4F;
     }
 
 </style>
 <script>
     $(document).ready(function(){
         $(".dropdown").hover(function(){
             var dropdownMenu = $(this).children(".dropdown-menu");
             if(dropdownMenu.is(":visible")){
                 dropdownMenu.parent().toggleClass("open");
             }
         });
     });     
     </script>
 
       <!-- navbar-->
       <%- include('navbar/navbar.ejs') %>

 </head>


<!-- Begin Top article edit
================================================== -->

    

    
	<div class="graybg authorpage">
        <div class="container"> 
          <div class="section-title">
        <h2><span>編輯貼文</span></h2>
    </div>          
           <% for (let i=0;i<model.length; i++){ %>
            <div class="listrecent listrelated">
             
                    <!-- 食譜回圈一 -->
                    <div class="authorpostbox">
                        <div class="card">
                            <a href="author">
                            <img class="img-fluid img-thumb" src="assets/img/demopic/8.jpg" alt="">
                            </a>
                            <div class="card-block">
                                <h2 class="card-title"><a href="art_edit/edit/<%= model[i].id %>"><%= model[i].title %></a></h2>
                                        <div class="metafooter">
                                    <div class="wrapfooter">
                                        <span class="meta-footer-thumb">
                                        <span class="post-date"><%= model[i].updatedate %></span></span><span class="post-read"></span>
                                        </span>
                                        <span class="post-read-more"><a href="art_edit/delete/<%= model[i].id %>" title="Read Story" onclick="return checkIsDelete()">刪除</a></span> 				<!-- 加上刪除功能-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end post -->
            </div>
        </div>
    </div>
            <%}%>
            
            
        </div>
        </section>
        <!-- article edit Posts
        ================================================== -->

       
