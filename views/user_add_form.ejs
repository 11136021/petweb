     <section id="main">
        <div class="container">
            <div class="box-user">
                <span class="line"></span>
                <span class="text">
                    <div class="send-message">
                        <div class="section-heading">
                            <h2>註冊新帳號</h2>
                        </div>

                        <div class="col-md-8">
                            <div class="contact-form">
                                <form action="/user_add_form" method="post">
                                    <div class="form">
                                        <div class="form">
                                            <span class="name">帳號</span>
                                            <span class="value"><input type="text" class="form-control" name="email"
                                                    placeholder="請輸入您的電子郵件位址，或使用google帳號註冊"></span>
                                            <br />
                                            <span class="name">密碼 </span>
                                            <span class="value"><input type="password" class="form-control"
                                                    name="password" required=""></span>
                                            <br />
                                            <span class="name">生日</span>
                                            <input name="birthday" type="date" class="form-control" id="birthday"
                                                placeholder="生日" required="">
                                            <br />
                                            <span class="name">暱稱</span>
                                            <span class="value"><input type="text" class="form-control"
                                                    name="name" required=""></span>
                                            <br />
                                            <span class="name"></span>
                                            <span class="value"><input type="submit" value="確認"></span>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            </form>
                        </div>
                    </div>
            </div>
            </span>
        </div>
    </section>
     
